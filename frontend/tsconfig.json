    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "outDir": "dist",
    "paths": {
      "@backend/*": [
        "/home/pvpmartins/work/pontus-tabler/backend/cosmos-db/src/typescript"
      ]
    }
  },
  "exclude": ["node_modules"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
